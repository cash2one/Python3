#!/usr/bin/env python
#coding=utf8

import sys
import subprocess

#Этот модуль планируется посвятить транслитерации

class TranslitBasic(object):

    #Русский алфаваит в верхнем и нихнем регистре
    _rusAlphabet =  ['а', 'б', 'в', 'г', 'д', 'е', 'ё', 'ж', 'з', 'и','й', 'к', 'л', 'м', 'н', 'о', 'п', 'р', 'с', 'т', 'у', 'ф', 'х', 'ч', 'ц', 'ш', 'щ', 'ь', 'ы', 'ъ','э', 'ю', 'я','А','Б','В','Г','Д','Е','Ё','Ж','З','И','Й','К','Л','М','Н','О','П','Р','С','Т','У','Ф','Х', 'Ч','Ц','Ш','Щ','Ь','Ы','Ъ','Э','Ю','Я',' ','(',')', 'nichego']
    #Транслит соотвертсвующий массиву с  русским алфавитом
    _transAlphabet = ['a', 'b', 'v', 'g', 'd', 'e', 'yo', 'zh', 'z', 'i', 'y', 'k', 'l', 'm', 'n', 'o', 'p', 'r', 's', 't', 'u', 'f', 'h', 'ch','ts', 'sh', 'shch', '\'', 'y', '\'', 'e', 'yu', 'ja','A','B','V','G','D','E','Yo','Zh','Z','I','Y','K','L','M','N','O','P','R','S','T','U','F','H','Ch', 'Ts','Sh','Shch','\'','Y','\'','E','Yu','Ja', '_', '!','!', 'nichego']

    #Сyrillic translit - BEGIN
    #Функция которая преобразаует полученную строку в латынь, посредством транслитерации.
    def cyrillicTranslit(self,word):
        new_word=''
        i=0
        for symb in word:
            prev_res= False
            j=0
            for source in self._rusAlphabet:
                if source == symb:
                    new_word=new_word.strip() + self._transAlphabet[j]
                    prev_res= True
                elif (j+1) == 70 and prev_res != True :
                    new_word=new_word+symb
                j=j+1
            i=i+1

        return new_word

    #Сyrillic translit - END


    #Создание списка файлов - BEGIN   
    def listOfFiles(self,path):

        subprocess.call("cd "+path+"; ls -1 > "+path+"/list_of_files.txt",shell=True)
        #Расчитано на то, что в качестве передаваемого параметра будет $PWD
        
        cyr_ls = open(path+'/list_of_files.txt')  #Открываем файл источник

        
        lat_ls = open (path+'/list_of_filesLAT.txt','w') #Открываем файл на запись

        #Пишем в новый файл конвертнутые строки с источника
        for line in cyr_ls:
            lat_ls.write((self.cyrillicTranslit(line)))

        
        cyr_ls.close()    #Закрываем оба файла
        lat_ls.close()    #Создание списка файлов - END
     

class FileActions(TranslitBasic):

    def __init__(self,path):
        self.path = path
        self.listOfFiles(self.path)
        print('Походу создался список файлов')
        


a=FileActions(sys.argv[1])

